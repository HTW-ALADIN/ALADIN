{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "downlevelIteration": true,
        "baseUrl": "./src",
        "skipLibCheck": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts",
        "./test**/.ts",
        "./test/**/*.d.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}